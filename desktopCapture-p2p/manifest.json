{
	"name" : "WebRTC Desktop Sharing",
    "author": "Muaz Khan",
	"version" : "1.1",
	"manifest_version" : 2,
    "minimum_chrome_version": "34",
	"description" : "Using WebRTC desktop-capturing API to share screen of any application or entire screen or screen of any chrome tab.",
    "homepage_url": "https://www.webrtc-experiment.com/",
	"background": {
		"scripts": ["RTCMultiConnection-v1.9.js", "desktop-capturing.js"],
		"persistent": false
	},
	"browser_action" : {
		"default_icon" : "images/desktopCapture22.png",
		"default_title" : "Share Desktop!"
	},
	"icons" : {
		"16" : "images/desktopCapture16.png",
		"22" : "images/desktopCapture22.png",
		"32" : "images/desktopCapture32.png",
		"48" : "images/desktopCapture48.png",
		"128": "images/desktopCapture128.png"
	},
	"permissions": [
		"desktopCapture", "activeTab", "contextMenus"
	],
	"web_accessible_resources": [
		"images/desktopCapture48.png"
	]
}