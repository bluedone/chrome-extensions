{
	"name" : "WebRTC File Sharing",
    "author": "Muaz Khan",
	"version" : "1.9",
	"manifest_version" : 2,
    "minimum_chrome_version": "34",
	"description" : "Instantly/Privately/Reliably share files with single or multiple users without uploading to server!",
    "homepage_url": "https://www.webrtc-experiment.com/",
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"browser_action" : {
		"default_icon" : "images/fileCapture22.png",
		"default_title" : "Click to open file sharing page."
	},
	"icons" : {
		"16" : "images/fileCapture16.png",
		"22" : "images/fileCapture22.png",
		"32" : "images/fileCapture32.png",
		"48" : "images/fileCapture48.png",
		"128": "images/fileCapture128.png"
	},
	"permissions": ["tabs", "storage"],
	"web_accessible_resources": [
		"images/fileCapture48.png"
	],
	"options_ui": {
       "page": "options.html",
       "chrome_style": true
    }
}